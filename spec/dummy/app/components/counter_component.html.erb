<section class="min-h-[60vh] flex items-center justify-center bg-amber-50 text-slate-900">
  <div class="w-full max-w-md rounded-3xl border border-amber-200 bg-white p-8 shadow-xl">
    <div class="mt-10 text-center">
      <p class="text-xs uppercase tracking-widest text-amber-700">count</p>
      <p class="mt-3 text-7xl font-bold text-amber-700" data-testid="count"><%= state.count %></p>
    </div>


    <div class="mt-10 flex flex-wrap justify-center gap-3">
      <%= vcr_button_to("+", type: :increment, button_attrs: { class: "rounded-xl bg-amber-500 px-6 py-3 text-base font-semibold text-white shadow-lg shadow-amber-500/30 hover:bg-amber-400" }) %>
      <%= vcr_button_to("-", type: :decrement, button_attrs: { class: "rounded-xl bg-slate-200 px-6 py-3 text-base font-semibold text-slate-800 hover:bg-slate-300" }) %>
    </div>
  </div>
</section>
