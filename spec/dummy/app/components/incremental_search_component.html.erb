<section class="mx-auto max-w-4xl rounded-3xl border border-slate-200 bg-white px-10 py-8 shadow-xl shadow-slate-200/40">
  <header class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-400">Incremental Search</p>
      <h1 class="mt-2 text-3xl font-bold text-slate-900">Type-aware filtering</h1>
    </div>
    <div class="rounded-full bg-slate-100 px-4 py-2 text-xs font-semibold text-slate-500">
      Demo query: <span class="text-slate-900"><%= state.query.presence || "(empty)" %></span>
    </div>
  </header>

  <div class="mt-8 grid gap-6 lg:grid-cols-[1.2fr_0.8fr]">
    <div class="rounded-2xl border border-slate-200 bg-slate-50 p-6">
      <label class="text-sm font-semibold text-slate-700" for="vcr-live-input-query">Search</label>
      <div class="mt-3">
        <%= helpers.vcr_live_input(
          "query",
          type: :set_query,
          value: state.query,
          placeholder: "Try typing to filter..."
        ) %>
      </div>
      <p class="mt-2 text-xs text-slate-500">入力するたびに結果が更新されます。</p>

      <div class="mt-5 flex flex-wrap gap-2">
        <%= vcr_button_to("clear", type: :reset, button_attrs: { class: "rounded-full border border-slate-300 bg-white px-4 py-2 text-xs font-semibold text-slate-700" }) %>
      </div>
    </div>

    <div class="rounded-2xl border border-slate-200 bg-white p-6">
      <div class="flex items-center justify-between">
        <p class="text-sm font-semibold text-slate-700">Matches</p>
        <span class="rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700"><%= Array(state.results).size %></span>
      </div>
      <div class="mt-4 space-y-2">
        <% Array(state.results).each do |item| %>
          <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-2 text-sm font-semibold text-slate-800">
            <%= item %>
          </div>
        <% end %>
        <% if Array(state.results).empty? %>
          <p class="text-sm text-slate-500">No matches yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</section>
